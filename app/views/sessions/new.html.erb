<h2>Log in</h2>
<%= form_tag('/sessions', method: 'post', id: "login") do %>
<div id="login_fields">
  <%= label_tag :username %>
  <%= text_field_tag :username, nil %><br>

  <%= label_tag :password %>
  <%= password_field_tag :password, nil %><br>
</div>
  <%= check_box_tag :remember_me, 1, params[:remember_me] %>
  <%= label_tag :remember_me %><br>

  <%= submit_tag 'Log in' %>
<% end %>
