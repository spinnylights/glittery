<h2>Log in</h2>
<%= form_tag('/sessions', method: 'post') do %>
<div id="fields">
  <%= label_tag :username %>
  <%= text_field_tag :username %><br>

  <%= label_tag :password %>
  <%= text_field_tag :password %><br>

  <%= check_box_tag :remember_me, 1, params[:remember_me] %>
  <%= label_tag :remember_me %><br>
</div>
<div id="log_in">
  <%= submit_tag 'Log in' %>
</div>
<% end %>
