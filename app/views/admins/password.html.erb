<h3>Change Password</h3>
<% if current_admin.errors.any? %>
  <div id="errors">
    <% current_admin.errors.full_messages.uniq.each do |msg| %>
      <p><%= msg %></p>
    <% end %>
    <p><%= current_admin.errors[:password] %></p>
  </div>
<% end %> 
<%= form_for current_admin, url: { action: 'update' } do |a| %>
  <%= a.label      :new_password %>
  <%= a.text_field :new_password %><br>

  <%= a.label      :password_confirmation, 'Confirm password' %>
  <%= a.text_field :password_confirmation %><br>

  <%= a.submit "Submit" %>
<% end %>
<%= link_to 'Back', edit_admin_path %>
