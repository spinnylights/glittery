<nav>
  <% if signed_in? %>
    <%= link_to 'Add New Artwork', new_artwork_path %><br>
    <%= link_to 'Settings', edit_admin_path %>
  <% end %>
</nav>
<div id="gallery">
  <% @artworks.each do |artwork| %>
    <div class="art">
      <div id="<%= artwork.name %>">
        <div class="artwork_heading">
          <h3><%= artwork.name %></h3><br>
        </div>
        <div class="image">
          <%= link_to artwork do %>
            <%= image_tag artwork.image.url(:gallery) %>
          <% end %>
          <br>
        </div>
        <% if signed_in? %>
          <div class="edit_links">
            <%= link_to 'Edit', edit_artwork_path(artwork.id) %><br>
            <%= link_to 'Delete', artwork, 
              method: 'delete', confirm: 'Are you sure?' %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
