<h2>Add New Artwork</h2>
<p>Adding a name and/or description is optional.</p>
<%= form_for @artwork, url: { action: 'create' }, 
  html: { class: 'artwork_form' } do |a| %>
  <%= render partial: 'shared/errors', locals: { instance: @artwork }  %>

  <%= a.label      :image %>
  <%= a.file_field :image %><br>

  <%= a.label      :name %>
  <%= a.text_field :name %><br>

  <%= a.label     :description %><br>
  <%= a.text_area :description %><br>

  <%= a.submit 'Submit' %>
<% end %>
<%= link_to 'back', '/' %>
